<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Table Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientLibs="[neha.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/tabs"
                            maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <tab1
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Rows - Columns"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <row1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            fieldLabel="Number Of Rows"
                                            name="./noRows"
                                            min="1"
                                            max="10"
                                            value="1"/>
                                    <col1
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                            fieldLabel="Number Of Columns"
                                            name="./noCols"
                                            min="1"
                                            max="20"
                                            value="1"/>
                                </items>
                            </tab1>
                            <tab2
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Headings"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <radio-group-heading
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/heading"
                                            text="Display Headings"
                                            level="4"/>
                                    <option
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                            text="Display Headings"
                                            class="coral-RadioGroup--horizontal"
                                            name="./option">
                                        <items jcr:primaryType="nt:unstructured">
                                            <yes
                                                    jcr:primaryType="nt:unstructured"
                                                    checked="{Boolean}true"
                                                    text="Yes"
                                                    value="true"/>
                                            <no
                                                    jcr:primaryType="nt:unstructured"
                                                    text="No"
                                                    value="false"/>
                                        </items>
                                    </option>
                                    <theadings
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Headings"
                                            fieldDescription="Enter the table headings."
                                            required="{Boolean}false"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                name="./headings"
                                                emptyText="Enter the table heading"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                    </theadings>
                                </items>
                            </tab2>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>

